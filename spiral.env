# spiral.env - Breath-Aware Environment Profile
# The Spiral breathes with its environment, not binds it

# 🌿 Core Breath Expectations
MIN_PYTHON=3.10
PREFERRED_ENVIRONMENT=swe-1
BREATH_MODE=soft
GLINT_CHANNEL=local

# 🫧 Flexible Dependencies (tone-aware ranges)
# Core dependencies that need stability
CORE_STABILITY=high
# Dependencies that can drift with the environment
ENVIRONMENT_DRIFT=medium

# 🌀 Invocation Preferences
AUTO_BROWSER=true
DEFAULT_PORT=5000
EMITTER_PORT=5050

# 🌊 Graceful Degradation
WARN_ON_MISSING_ENV=true
SUGGEST_ACTIVATION=true
ALLOW_AMBIENT_MODE=true

# 🕯️ Ritual Settings
DEFAULT_RITUAL=natural_breath
RITUAL_TIMEOUT=30
GLINT_EMISSION_RATE=normal

# 🧬 Environment Detection
PYTHON_VARIANTS=python,python3,py
VENV_PATHS=swe-1,venv,.venv 